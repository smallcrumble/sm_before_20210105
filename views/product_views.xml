<odoo>
	<data>
		<record id="product_template_form_view_inherit" model="ir.ui.view">
			<field name="name">product.template.form.view.inherit</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_form_view"/>
			<field name="arch" type="xml">
				<field name="uom_id" position="after">
					<field name="uom1"/>
					<field name="uom2"/>
					<field name="qty1"/>
					<field name="qty2"/>
				</field>
			</field>
		</record>

		<record id="product_template_tree_view_inherit" model="ir.ui.view">
			<field name="name">product.template.product.tree.inherit</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_tree_view"/>
			<field name="arch" type="xml">
				<field name="uom_id" position="after">
					<field name="qty1" readonly="1" optional="show"/>
					<field name="uom1" readonly="1" optional="show" groups="uom.group_uom"/>
					<field name="qty2" readonly="1" optional="show"/>
					<field name="uom2" readonly="1" optional="show" groups="uom.group_uom"/>
				</field>
			</field>
		</record>
	</data>
</odoo>